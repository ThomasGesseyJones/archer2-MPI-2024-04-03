MF=	Makefile_f90

# For Cirrus
#FC=	mpif08
#FFLAGS=	-fc=ifort

# For ARCHER2
FC=	ftn
FFLAGS=

LFLAGS=

EXE=	hello

SRC= \
	hellof08.f90

#
# No need to edit below this line
#

.SUFFIXES:
.SUFFIXES: .f90 .o

OBJ=	$(SRC:.f90=.o)
MOD=	$(SRC:.f90=.mod)

.f90.o:
	$(FC) $(FFLAGS) -c $<

all:	$(EXE)

$(EXE):	$(OBJ)
	$(FC) $(FFLAGS) -o $@ $(OBJ) $(LFLAGS)

$(OBJ):	$(MF)

clean:
	rm -f $(OBJ) $(EXE) $(MOD) core
